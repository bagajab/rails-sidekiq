<% if record.errors.any? %>
  <aside data-error class="text-center px-6 py-4 font-bold my-6 border-2 border-red-800 bg-red-100 text-red-800">
    <h2 class="text-xl">Can't create the order:</h2>
    <p class="font-medium">
      <%= record.errors.full_messages.join(", ") %>
    </p>
  </aside>
<% end %>
