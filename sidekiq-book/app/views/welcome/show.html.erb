<main class="text-center p-12">
  <h1 class="font-bold text-4xl">Sidekiq Book Example App</h1>
  <h2 class="font-bold text-3xl mt-2">Welcome!</h2>
  <section class="mt-12">
    <nav>
      <%= link_to "Add an Order", new_order_path, class: "button inline-block" %>
    </nav>
  <hr class="my-6">
  <h3 class="my-4 text-center font-bold text-2xl">Service Overview &amp; Status</h3>
  <div class="grid grid-cols-2">
    <% @service_statuses.each do |status| %>
      <details class="ml-4" data-testid="service-<%= status.name %>">
        <summary class="text-left font-bold text-xl mb-4">
          <%= status.name.humanize %>
          <%= status.status_summary_character %>
        </summary>
        <section class="p-4 border rounded bg-white">
          <% if status.status == true %>
            <h4 class="font-semibold text-l text-left mb-2">Service Info</h4>
            <table class="table-fixed bg-gray-100 w-full">
              <% status.info.keys.sort.each do |key| %>
                <tr>
                  <td class="w-1/3 border px-4 py-2 text-left">
                    <%= key %>
                  </td>
                  <td class="w-1/2 border px-4 py-2 text-left">
                    <%= status.info[key] %>
                  </td>
                </tr>
              <% end %>
            </table>
          <% else %>
            <h4 class="font-semibold text-l text-left mb-2">Service Problem</h4>
            <p class="text-left">
              <%= status.status %>
            </p>
          <% end %>
        </section>
      </details>
    <% end %>
  </div>
  </section>
</main>
